/* pages/index/VideoSwitchingSwiper/index.wxss */
.VideoSwitchingSwiper,page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #000;
}
.Viedo_Continer{
  width: 100%;
  height: 93.5%;
  display: flex;
}
.Viedo_Continer>swiper{
  width: 100%;
  height: 100%;
}
.swiper-item{
  width: 100%;
  height: 100%;
  position: relative;
}
.demo-text-1{
  background-color: aqua;
}
.demo-text-2{
  background-color: blueviolet;
}
.demo-text-3{
  background-color: bisque;
}
.VideoItem{
  width: 100%;
  height: 100%;
  position: relative;
}
.viedoPlayCover{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.viedoPlayImg{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 45%;
  left: 45%;
}
.footer_navBar{
  width: 100%;
  height: 6.6%;
  display: flex;
  flex-wrap: nowrap;
  background: #000;
  color: #fff;
  font-size: 25rpx;
  position: fixed;
  bottom: 0;
  z-index:9999;
  align-items: center;
  justify-content: space-around;
}
.footer_navBar image{
  width: 70rpx;
  height: 70rpx;
}
.footer_navBar navigator{
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.viedoRightBTN_Cover{
  width: 100rpx;
  height: 700rpx;
  position: absolute;
  right: 10rpx;
  bottom: 215rpx;
}
.viedoRightBTN_Cover .Cover_Item{
  width: 100%;
  height: 105rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 30rpx;
}
.viedoRightBTN_Cover .Cover_Item .touxiang_CoverImage{
  border-radius: 50%;
  width: 75rpx;
  height: 75rpx;
  border: 1px solid #fff;
}
.viedoRightBTN_Cover .Cover_Item .guanzhu_CoverImage{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 75rpx;
}
.viedoRightBTN_Cover .Cover_Item view{
  font-size: 22rpx;
  color: #fff;
}
.viedoRightBTN_Cover .Cover_ItemTwo image{
  width: 75rpx;
  height: 75rpx;
}
.viedoRightBTN_Cover .Cover_ItemThree view{
  width: 75rpx;
  height: 75rpx;
  /* background: linear-gradient(to left,#000,rgb(51, 51, 51)); */
  background: #000;
  border-radius: 50%;
}
.viedoRightBTN_Cover .Cover_ItemThree image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  border-radius: 50%;
}
.viedoBottomText_Cover{
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  background: #000;
  opacity: 0.8;
  color: rgb(236, 165, 11);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 25rpx;
}
.viedoBottomText_Cover image{
  width: 30rpx;
  height: 30rpx;
}
.viedoBottomText_Cover>view{
  display: flex;
  align-items: center;
}