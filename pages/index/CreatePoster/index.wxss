/* pages/index/CreatePoster/index.wxss */
page,.CreatePoster{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
}
.shengcheng{
  width: 90%;
  height: 80%;
  position: fixed;
  top: 135rpx;
  left: 5%;
  border-radius: 10px;
  z-index: 999;
}
.shengcheng image{
  width: 100%;
  height: 100%;
  display: flex;
  border-radius: 20rpx;
}
.baocun{
  display: block;
  width: 60%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 27rpx;
  left: 27%;
  background: linear-gradient(#FFDEB2,#FFCB7E);
  color: #333;
  font-size: 29rpx;
  border-radius: 10rpx;
}
button[class="baocun"]::after{
  border: 0;
}

.share-canvas {
  width: 100%;
  height: 100%;
  background: transparent;
}
.footerTwo{
  position: fixed;
  width: 80%;
  height: 80rpx;
  display: flex;
  bottom: 45rpx;
  z-index: 10;
  left: 10%;
}
.btn{
  background: linear-gradient(#FFDEB2,#FFCB7E);
  color: #262626;
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 5px;
}
